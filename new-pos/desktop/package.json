{
  "name": "mimipos",
  "version": "1.0.0",
  "description": "Yeni Nesil Pos Otomasyon Sistemi",
  "displayName": "MimiPos",
  "author": "Mert ÖZÇELİK",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "electron:dev": "electronmon .",
    "start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "build": "vite build",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest",
    "preview": "vite build && electron .",
    "clean": "del dist"
  },
  "dependencies": {
    "electron": "^38.2.2",
    "electron-store": "^11.0.2",
    "axios": "^1.12.2",
    "config": "^4.1.1",
    "del": "^8.0.1",
    "electron-pos-printer": "^1.3.8",
    "html-pdf": "^3.0.1",
    "os-utils": "^0.0.14",
    "pdf-to-printer": "^5.6.1",
    "sweetalert2": "^11.26.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.2.0",
    "@types/config": "^3.3.5",
    "@types/html-pdf": "^3.0.3",
    "@types/jest": "^30.0.0",
    "@types/node-os-utils": "^1.3.4",
    "@types/os-utils": "^0.0.4",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.9",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.mimipos.pos_app",
    "productName": "MimiPos",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
