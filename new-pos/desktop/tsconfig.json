{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "ignoreDeprecations": "6.0",
    "noImplicitAny": true,
    "allowJs": true,
    "allowArbitraryExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["./tests", "./src", "./config/*.json", "vite.config.ts"],
  "exclude": ["node_modules"]
}
